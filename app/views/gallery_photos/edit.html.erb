<div class='part padding margin_bottom'>
  <h1>Editing Photo</h1>
</div>

<div class='part padding'>
  <% form_for(@gallery_photo) do |f| %>
    <%= f.error_messages %>
    <p>
      <%= image_tag @gallery_photo.url :small %>
    </p>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name, :class => 'input' %>
    </p>
    <p>
      <%= f.label :cover, 'Gallery cover' %> <%= f.check_box :cover %>
    </p>
    <p>
      <%= f.label :caption %><br />
      <%= f.text_area :caption, :class => 'input' %>
    </p>
    <p>
      <span class='tag_icon'></span><%= f.label :tag_list %><br />
      <%= f.text_field :tag_list, :class => 'input' %>
    </p>
    <p>
      <%= f.submit 'Update', :class => 'button bg_color', :disable_with => 'Updating...' %>
    </p>
  <% end %>
</div>

<div class='part padding'>
  <%= link_to 'Show', @gallery_photo %> |
  <%= link_to 'Back', gallery_photos_path %>
</div>
