<div class='new_comment clear'>
  <% remote_form_for [commentable, Comment.new] do |f| %>
    <% unless logged_in? %>
      <p>
        <%= f.label :name, :class => 'input' %><br />
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :email, :class => 'email_input input' %><br />
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :url, :class => 'input' %><br />
        <%= f.text_field :url %>
      </p>
    <% end %>
    <p>
      <%= f.text_area :body, :class => 'comment_input input' %>
    </p>
    <p><%= f.submit "Comment!", :class => 'button green_bg' %></p>
  <% end %>
</div>
