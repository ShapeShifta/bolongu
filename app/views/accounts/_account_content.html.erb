<div class="account_info">
  <div class="account_info_avatar left" >
    <% if account_content.account.avatar.file?  %>
      <%= image_tag account_content.account.avatar.url(:tiny) %>
    <% end %>
  </div>
  <div class="account_info_name left">
    <%= link_to_unless_current account_content.account.name, account_index_url(account_content.account.login) %>
  </div>
  <br/> 
  <div class="left">
    <%= time_ago_in_words account_content.created_at %>
  </div>
</div>
