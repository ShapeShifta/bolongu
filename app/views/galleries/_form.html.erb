<div class='part padding'>
  <% form_for [account, gallery] do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name, :class => 'input' %>
    </p>
    <p>
      <%= f.label :blog_private %>
      <%= f.check_box :blog_private %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description, :class => 'input' %>
    </p>
    <p>
      <%= f.submit 'Save', :class => 'button green_bg' %>
    </p>
  <% end %>
</div>
