<% form_for @thing, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <% if thing.photo.file? %>
    <p>
      <%= image_tag thing.photo.url(:small) %>
    </p>
  <% end %>
  <p>
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>
