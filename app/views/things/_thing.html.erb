<% div_for thing, :class => 'part' do %>
  <div>
    <h1><%= link_to_unless_current thing.name, thing %></h1>
    
    <% if thing.photo.file? %>
      <div class='thing_photo left'>
        <%= link_to_unless_current image_tag(thing.photo.url(:default)), thing %>
      </div>
    <% end %>
  </div>

  <p><%= format thing.description %></p>
  
  <% if thing.attachment.file?  %>
    <p>
      <%= link_to thing.attachment_file_name, thing.attachment.url, :class => 'paperclip' %>
    </p>
  <% end %>

  <% if logged_in? %>
    <div class='right'>
      <% if current_account.things.include?(thing) %>
        <p>
          <%= link_to "Remove #{thing.name} from my things", remove_thing_path(thing), :method => :delete, :class => 'remove' %>
        </p>
      <% else %>
        <p>
          <%= link_to "Add #{thing.name} to my things", add_thing_path(thing), :method => :post, :class => 'add' %>
        </p>
      <% end %>  
    </div>
  <% end %>

  <table width='100%' class='clear_left'>
    <tr>
      <td width='50px'>
        <% if thing.author.avatar.file?  %>
          <%= image_tag thing.author.avatar.url(:tiny) %> 
        <% end %>
      </td>
      <td width='25%'>
        <div class='account_info_name'>
          <%= link_to_unless_current thing.author.name, account_index_url(thing.author.login) %>
        </div>
        <span class='time_ago'><%= time_ago_in_words thing.created_at %></span>
      </td>
      <td width='45%' class='text_center'>
        <%= #share_this thing.name, thing_url(thing)
        %>
        <%= link_to_unless_current pluralize(thing.comments.count, 'comment'), thing %> from <%= link_to_unless_current pluralize(thing.commentators.count, 'person'), thing %>
      </td>
      <td width='30%'>
        <% if logged_in? and current_account == thing.author %>
          <div class='manager_links text_right'>            
            <%= link_to 'Edit', edit_thing_path(thing), :class => 'thing_edit' %> |
            <%= link_to 'Delete', thing, :confirm => 'Are you sure?', :method => :delete, :class => 'thing_destroy' %>
          </div>
        <% end %>
      </td>
    </tr>
  </table>
  
  <% unless thing.comments.empty?  %>
    <% render :layout => 'comments/comment', :object => thing.comments.first do %>
      <h4>last comment</h4>
    <% end %>
  <% end %>
<% end %>
