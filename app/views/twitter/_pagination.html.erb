<div class='part padding margin_top text_center clear_left'>
  <%= link_to '&lt; Newer', {:page => (params[:page].to_i - 1)}, :class => 'newer' if params[:page] && (params[:page].to_i - 1) > 0 %>
  <% if params[:page] %>
    <%= link_to 'Older &gt;', {:page => (params[:page].to_i + 1)}, :class => 'older' %>
  <% else %>
    <%= link_to 'Older &gt;', {:page => 2 }, :class => 'older' %>
  <% end %>
</div>
