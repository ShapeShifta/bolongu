<% div_for tweet, :class => 'part' do %>
  <div class='content_icon left'><span class='tweet_icon'></span></div>
  <% if tweet.blog_private %>
    <div class='content_icon left'><span class='private_icon'></span></div>
  <% end %>

  <p><%= tweet_body tweet.body %></p>
  
  <% render :layout => 'layouts/content_info', :locals => { :content => tweet } do %>
    <% if logged_in? and current_account == tweet.account %>
      <div class='manager_links text_right'>
        <%= link_to 'Show', tweet %> |
        <%= link_to 'On Twitter', show_twitter_tweet_path(tweet.twitter_id) %> |
        <%= link_to 'Delete', tweet, :confirm => 'Are you sure?', :method => :delete, :class => 'tweet_destroy' %>
      </div>
    <% end %>
  <% end %>
  
  <% unless tweet.comments.empty?  %>
    <% render :layout => 'comments/comment', :object => tweet.comments.first do %>
      <h4>last comment</h4>
    <% end %>
  <% end %>
<% end %>
