<% unless content.tags.empty? %>
  <p>
    <span class='tag_icon'></span><label>Tags</label> <%= content.tag_list %>
  </p>
<% end %>


<table width='100%' class='clear_left'>
  <tr>
    <td>
      <% if content.account.avatar.file?  %>
        <%= link_to_unless_current image_tag(content.account.avatar.url(:tiny)), account_index_path(content.account.login) %>
      <% end %>
    </td>
    <td width='25%' class='text_left'>
      <div class='account_info_name'>
        <%= link_to_unless_current content.account.name, account_index_url(content.account.login) %>
      </div>
      <span class='time_ago'><%= time_ago_in_words content.created_at %></span>
    </td>
    
    <td width='40%'>
      <div class='text_center'>
        <%= # share_this content.title, url_for(content)
        %>
        <%= link_to_unless_current pluralize(content.comments.count, 'comment'), content %> from <%= link_to_unless_current pluralize(content.commentators.count, 'person'), content %>
      </div>
    </td>
      
    <td width='35%'>
      <%= yield %>
    </td>
  </tr>
</table>
